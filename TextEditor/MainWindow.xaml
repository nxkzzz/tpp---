<Window x:Class="TextEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Текстовый редактор" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Файл">
                <MenuItem Header="_Новый" Click="NewCommand_Executed" InputGestureText="Ctrl+N"/>
                <MenuItem Header="_Открыть" Click="OpenCommand_Executed" InputGestureText="Ctrl+O"/>
                <MenuItem Header="_Сохранить" Click="SaveCommand_Executed" InputGestureText="Ctrl+S"/>
            </MenuItem>
        </Menu>
        <TextBox Name="TextBoxEditor" AcceptsReturn="True" AcceptsTab="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" FontSize="14" />
    </DockPanel>
</Window>
